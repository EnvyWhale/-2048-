<image class="bg" src="/images/联系我.jpg">
</image>
<view class="top">联系我</view>
<form bindsubmit="formSubmit">
    <view class="content">
        <view>
            <input name="name" bindblur="nameChange" bindtap="allowSubscribe" placeholder-class="phcolor" placeholder="输入您的姓名" />
        </view>
        <view>
            <input name="phone" bindblur="phoneChange" placeholder-class="phcolor" placeholder="输入您的手机号码" />
        </view>
        <view>
            <picker name="c_date" mode="date" bindchange="pickerChange">
                请选择联系日期：{{interview_date}}</picker>
        </view>
        <view>
            <input name="address" bindblur="addressChange" placeholder-class="phcolor" placeholder="请输入联系地点" />
        </view>
        <button form-type="submit">提交</button>
    </view>
</form>